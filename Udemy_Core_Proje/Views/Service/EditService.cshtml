@model Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h1>Service Düzenleme Sayfası</h1>

@using (Html.BeginForm("EditService", "Service", FormMethod.Post))

{
    @Html.HiddenFor(x => x.ServiceID)
    <br />
    @Html.Label("Service Başlığı")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.Label("Deneyim İçeriği")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />


    <button class=" btn btn-primary">Güncelle</button>
    <button href="/Service/Index/" class=" btn btn-outline-danger">Çıkış</button>



}

