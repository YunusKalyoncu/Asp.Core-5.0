@model Portfolio
@{
    ViewData["Title"] = "EditPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditPortfolio", "Portfolio", FormMethod.Post))

{
    @Html.HiddenFor(x => x.PortfolioID)
    <br />
    @Html.Label("Proje İsmi")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Proje Resmi")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    @Html.Label("Proje Adresi")
    @Html.TextBoxFor(x => x.ProjectUrl, new { @class = "form-control" })
    <br />
    @Html.Label("Kullanılan Icon")
    @Html.TextBoxFor(x => x.Platform, new { @class = "form-control" })
    <br />
    @Html.Label("Proje Fiyatı")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Proje Kullanılırlığı")
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })

    <br />
    @Html.Label("Referans Resimleri 1 ")
    @Html.TextBoxFor(x => x.Image1, new { @class = "form-control" })
    <br />
    @Html.Label("Referans Resimleri 2 ")
    @Html.TextBoxFor(x => x.Image2, new { @class = "form-control" })
    <br />
    @Html.Label("Referans Resimleri 3 ")
    @Html.TextBoxFor(x => x.Image3, new { @class = "form-control" })
    <br />
    @Html.Label("Referans Resimleri 4 ")
    @Html.TextBoxFor(x => x.Image4, new { @class = "form-control" })
    <br />
    @Html.Label("Proje Oranı")
    @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
    <button class=" btn btn-primary"> Güncelle </button>
    <button href="/Porfolio/Index/" class=" btn btn-outline-danger">Çıkış</button>



}
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>



