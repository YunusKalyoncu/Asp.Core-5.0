@model Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h1>Yetenek Düzenleme Sayfası</h1>

@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))

{
    @Html.HiddenFor(x => x.SkillID)
    <br />
    @Html.Label("Yetenek Başlığı")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.Label("Yetenek Değeri")
    @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
    <br />
    <button class=" btn btn-primary">Güncelle</button>
    <button href="/Skill/Index/" class=" btn btn-outline-danger">Çıkış</button>



}
